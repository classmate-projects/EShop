<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EShopNative.Views.CustomNavBar"
             xmlns:models="clr-namespace:EShopNative.Models">
    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
        <Label Style="{StaticResource MaterialIcons}"
               Text="{x:Static models:Icons.Menu}"
               WidthRequest="24"
               HeightRequest="24"
               VerticalOptions="Center">
            <Label.GestureRecognizers>
                <!--<TapGestureRecognizer Command="{Binding BackCommand, Source={x:Reference Name=NavBar}}" />-->
                <!--<TapGestureRecognizer Command="{Binding BackCommand, RelativeSource={RelativeSource AncestorType=ContentView}}" />-->
            </Label.GestureRecognizers>
        </Label>
        <Label Text="{Binding Title}"
               Grid.Column="1"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="18"
               TextColor="White" />
        <Label Style="{StaticResource MaterialIcons}"
               Text="{x:Static models:Icons.Arrow_back_ios}"
               Grid.Column="2"
               WidthRequest="24"
               HeightRequest="24"
               VerticalOptions="Center">
            <Label.GestureRecognizers>
                <!--<TapGestureRecognizer Command="{Binding MenuCommand, Source={x:Reference Name=NavBar}}" />-->
                <!--<TapGestureRecognizer Command="{Binding MenuCommand, RelativeSource={RelativeSource AncestorType=ContentView}}" />-->
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentView>
