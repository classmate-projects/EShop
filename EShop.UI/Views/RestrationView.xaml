<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:EShop.Core.Models;assembly=EShop.Core"
             xmlns:controls="clr-namespace:EShop.Core.CustomViews;assembly=EShop.Core"
             x:Class="EShop.UI.Views.RestrationView"
             BackgroundColor="{StaticResource AppDarkBackgroundColor}">
    <VerticalStackLayout VerticalOptions="Center">
        <Border Style="{StaticResource LoginBorderStyle}">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Ellipse Style="{StaticResource CircularBadgeStyle}" />
                <Label Style="{StaticResource MaterialIcons}"
                       Text="{x:Static models:Icons.How_to_reg}"
                       FontSize="65"
                       FontAttributes="Bold"/>
                <controls:CustomButton Style="{StaticResource PrimaryButtonStyle}"
                                   Grid.Row="2"
                                   Text="Register"/>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>
