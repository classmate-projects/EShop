<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EShop.UI.Views.SellerRegistrationView"          xmlns:models="clr-namespace:EShop.Core.Models;assembly=EShop.Core"
         xmlns:controls="clr-namespace:EShop.Core.CustomViews;assembly=EShop.Core"
         BackgroundColor="{StaticResource AppDarkBackgroundColor}">
    <VerticalStackLayout VerticalOptions="Center">
        <Border Style="{StaticResource LoginBorderStyle}">
            <Grid RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Ellipse Style="{StaticResource CircularBadgeStyle}" />
                <Label Style="{StaticResource MaterialIcons}"
                       Text="{x:Static models:Icons.How_to_reg}"
                       FontSize="60"
                       FontAttributes="Bold"/>
                <VerticalStackLayout Grid.Row="1" Spacing="10">
                    <Label Text="Register EShop Seller"
                           Style="{StaticResource LabelTextPrimaryStyle}"
                           FontSize="25"/>
                    <Label Text="Join our community by creating a new Eshop owner account"
                           Style="{StaticResource LabelLightTextStyle}"
                           HorizontalOptions="Center"
                           FontSize="13"/>
                    <Label Text="Your Name"
                           Style="{StaticResource LabelTextWhiteStyle}"/>
                    <controls:BorderedEntry Placeholder="Enter Your Name Address"
                                            Style="{StaticResource AppEntryStyle}"/>
                    <Label Text="Shop Name"
                           Style="{StaticResource LabelTextWhiteStyle}"/>
                    <controls:BorderedEntry Placeholder="Enter Your Shop Name"
                                            Style="{StaticResource AppEntryStyle}"/>
                    <Label Text="Email"
                           Style="{StaticResource LabelTextWhiteStyle}"/>
                    <controls:BorderedEntry Placeholder="Enter Your Email Address"
                                            Style="{StaticResource AppEntryStyle}"/>
                    <Label Text="Password"
                           Style="{StaticResource LabelTextWhiteStyle}"/>
                    <controls:BorderedEntry Placeholder="Enter Your Password"
                                            IsPassword="True"
                                            Style="{StaticResource AppEntryStyle}"/>
                    <Label Text="Confirm Password"
                           Style="{StaticResource LabelTextWhiteStyle}"/>
                    <controls:BorderedEntry Placeholder="Enter Your Password"
                                            IsPassword="True"
                                            Style="{StaticResource AppEntryStyle}"/>
                </VerticalStackLayout>
                <controls:CustomButton Style="{StaticResource PrimaryButtonStyle}"
                                       Grid.Row="2"
                                       Text="Register"/>
                <Label Grid.Row="3"
                       Style="{StaticResource LabelTextPrimaryStyle}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Already have an account " />
                            <Span Text="Login" FontAttributes="Bold" >
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" CommandParameter="SellerLogin"/>
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>
