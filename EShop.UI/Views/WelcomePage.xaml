<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:EShop.Core.Models;assembly=EShop.Core"
             xmlns:controls="clr-namespace:EShop.Core.CustomViews;assembly=EShop.Core"
             x:Class="EShop.UI.Views.WelcomePage"
             BackgroundColor="{StaticResource AppDarkBackgroundColor}">
    <VerticalStackLayout VerticalOptions="Center">
        <Border Style="{StaticResource LoginBorderStyle}">
            <Grid RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Ellipse Style="{StaticResource CircularBadgeStyle}" />
                <Label Style="{StaticResource MaterialIcons}"
                       Text="{x:Static models:Icons.Barcode_reader}"
                       FontSize="60"
                       FontAttributes="Bold"/>
                <Label Style="{StaticResource LabelTextPrimaryStyle}"
                       Grid.Row="1"
                       Text="Welcome to EShop"
                       FontSize="35"/>
                <Label Text="Please Select Your Login Type"
                       Grid.Row="2"
                       HorizontalOptions="Center"
                       Style="{StaticResource LabelLightTextStyle}"
                       FontSize="13"
                       Margin="0,0,0,30"/>
                <controls:CustomButton Style="{StaticResource PrimaryButtonStyle}"
                                   Grid.Row="3"
                                   Text="Start Selling"/>
                <controls:CustomButton Style="{StaticResource PrimaryButtonStyle}"
                                   Grid.Row="4"
                                   Text="Start Shopping"/>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>
