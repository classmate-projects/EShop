<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EShopNative.Pages.HomePage"
             BackgroundColor="{StaticResource AppDarkBackgroundColor}"
             NavigationPage.HasNavigationBar="False"
             xmlns:views="clr-namespace:EShopNative.CustomViews">
    <Grid>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Welcome!" FontSize="28" HorizontalOptions="Center" />
            <Label Text="{Binding UserName}" FontSize="20" HorizontalOptions="Center" />

            <Button Text="Logout"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding LogoutCommand}"
                    IsEnabled="{Binding IsNotBusy}" />

        </VerticalStackLayout>

        <views:LoadingOverlay />
    </Grid>
</ContentPage>