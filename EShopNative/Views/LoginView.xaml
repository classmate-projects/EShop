<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:EShopNative.CustomViews"
             xmlns:models="clr-namespace:EShopNative.Models"
             x:Class="EShopNative.Views.LoginView">
    <VerticalStackLayout VerticalOptions="Center">
        <Border Style="{StaticResource LoginBorderStyle}">
            <Grid RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Ellipse Style="{StaticResource CircularBadgeStyle}" />
                <Label Style="{StaticResource MaterialIcons}"
                   Text="{x:Static models:Icons.Fingerprint}"
                   FontSize="60"
                   FontAttributes="Bold"/>
                <VerticalStackLayout Grid.Row="1" Spacing="10">
                    <Label Text="Login EShop"
                       Style="{StaticResource LabelTextPrimaryStyle}"
                       FontSize="40"/>
                    <Label Text="Enter your credentials to access your secure account."
                           Style="{StaticResource LabelLightTextStyle}"
                           HorizontalOptions="Center"
                           FontSize="13"/>
                    <Label Text="Email"
                           Style="{StaticResource LabelTextWhiteStyle}"/>
                    <controls:BorderedEntry Placeholder="Enter Your Email Address"      
                                            Text="{Binding Email}"
                                            Style="{StaticResource AppEntryStyle}"/>
                    <Label Text="Password"
                           Style="{StaticResource LabelTextWhiteStyle}"/>
                    <controls:BorderedEntry Placeholder="Enter Your Password"
                                            IsPassword="True"
                                            Text="{Binding Password}"
                                            Style="{StaticResource AppEntryStyle}"/>
                    <Label Text="Forgot Password?"
                           Style="{StaticResource LabelTextPrimaryStyle}"
                           HorizontalOptions="End"/>
                </VerticalStackLayout>
                <controls:CustomButton Style="{StaticResource PrimaryButtonStyle}"
                                   Grid.Row="2"
                                   Command="{Binding LoginCommand}"
                                   Text="Login"/>
                <Label Grid.Row="3"
                   Style="{StaticResource LabelTextPrimaryStyle}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="You don't have an account " />
                            <Span Text="Register" FontAttributes="Bold" >
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NavigateToRegistrationCommand}" />
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>
